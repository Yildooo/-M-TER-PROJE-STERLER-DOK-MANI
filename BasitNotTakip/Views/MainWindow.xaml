<Window x:Class="BasitNotTakip.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Basit Not Takip" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Notlar" FontWeight="Bold" Margin="0,0,0,5" />
            <ListBox x:Name="NotesList" Height="120" DisplayMemberPath="Baslik" />
            <TextBox x:Name="NoteTitle" Margin="0,5,0,0" />
            <TextBox x:Name="NoteContent" Height="60" AcceptsReturn="True" TextWrapping="Wrap" />
            <WrapPanel Margin="0,5,0,0">
                <Button Content="Not Ekle" Click="AddNote_Click" Width="80" />
                <Button Content="Not Sil" Click="RemoveNote_Click" Width="80" Margin="5,0,0,0" />
            </WrapPanel>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock Text="Görevler" FontWeight="Bold" Margin="0,0,0,5" />
            <ListBox x:Name="TasksList" Height="120" DisplayMemberPath="Aciklama" />
            <TextBox x:Name="TaskDescription" Margin="0,5,0,0" />
            <WrapPanel Margin="0,5,0,0">
                <Button Content="Görev Ekle" Click="AddTask_Click" Width="80" />
                <Button Content="Sil" Click="RemoveTask_Click" Width="80" Margin="5,0,0,0" />
                <Button Content="Tamamlandı/Toggle" Click="ToggleTask_Click" Width="120" Margin="5,0,0,0" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
